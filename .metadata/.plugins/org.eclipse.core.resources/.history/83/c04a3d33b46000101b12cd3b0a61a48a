package Arrays1;

public class singleArray1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * int i[]=new int[5]; i[0]=10; i[1]=20;
		 */

		int[] i= {2,5,1,9,6};
		int j;
		int sum=0;

		System.out.println("no of variable in the i are : "+i.length);
		System.out.println(i[0]);

		// sum of the given array

		/*
		 * for(j=0;j<i.length;j++) { sum=sum+i[j];
		 * 
		 * } System.out.println("sum of the arry a is   :"+sum);
		 */


		for(j=0;j<i.length;j++)
		{ 
			sum=sum+i[j];
		}

		System.out.println("the average of an arrya is :  "+sum/i.length);
	}

}
